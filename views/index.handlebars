<div>
  <h1 class="title">The Mountains Are Calling!</h1>
</div>

<div class="tobeclimbed">
  <h2>Fourteeners You Want to Summit</h2>

  <ul>
    {{#each fourteeners}}
    {{#unless this.climbed}}
    <li>
      {{this.name}}
      <button type="button" class="change-climbed" data-id="{{this.id}}" data-climbed="{{climbed}}">I summited this!</button>

      </button>
    </li>
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="climbed">
  <h2>Summited Fourteeners</h2>

  <ul>
    {{#each fourteeners}}
    {{#if this.climbed}}
    <li>
      {{this.name}}
    </li>
    {{/if}}
    {{/each}}
  </ul>
</div>

<div>
<h2>Add a 14er to the List</h2>
<form class="create-form">
  <div class="form-group">
    <label for="14erLabel">14er Name:</label>
    <input type="text" id="14er" name="name">
  </div>
  <button type="submit">Add 14er</button>
</form>
</div>
